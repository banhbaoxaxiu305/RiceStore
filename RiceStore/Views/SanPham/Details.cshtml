            gap: 50px;
            padding: 30px;
        }

        .box-dos {
            font-family: 'Roboto', sans-serif;
            font-size: 50px;
            text-align: center;
            padding-top: 80px;
        }

        .box-das {
            background-color: #6FE864;
            width: 150px;
            height: 30px;
            border-radius: 10px;
            text-align: center;
        }

        .box-pro {
            width: 200px;
            height: 250px;
            background-color: darkkhaki;
            border-radius: 15px;
        }

            .box-pro:hover {
                opacity: 0.5;
            }

        .box-img {
            width: 150px;
            height: 150px;
        }

        .fm-size-img {
            width: 200px;
            height: 250px;
            border-bottom-left-radius: 15px;
