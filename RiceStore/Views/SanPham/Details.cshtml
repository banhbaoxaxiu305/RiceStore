<body>
    <div id="content">
        <div class="total-top">
            <div class="img">
                <img src="@Url.Content(Model.ProImage)" style="width:500px" />
            </div>
            <div class="sanpham">
                <p class="ltn" style="margin:0">
                    @Html.DisplayFor(model => model.ProName)
                </p>
                <ul class="btk">
                    <li>Thông tin sản phẩm</li>
                    <li>
                        @Html.DisplayFor(model => model.NameDecription)
                    </li>
                </ul>
                <p class="bvk">
                    Khối lượng
                    <input type="number" />
                    kg
                </p>


                <p class="khanh">99,999đ</p>
                <div class="btn-Cart">
                    <div class="congtru">
                        <button class="minus" onclick="handleMinus()" style="background-color: #6FE864">-</button>
                        <input class="num" style="background-color: #00E833" name="amount" type="text" value="1" id="amount" />
                        <button class="plus" onclick="handlePlus()" style="background-color: #6FE864">+</button>
                    </div>
                    <div class="add"><button style="background-color: #00E833" type="submit">Thêm vào giỏ hàng</button></div>

                </div>
                <script src="~/Scripts/MinusPlú.js"></script>

                <div class="an">

                    <img src="~/img/car icon.png" width="20" height="20" />
                    Đặt online giao tận nhà ĐÚNG GIỜ trong vòng 45 phút
                </div>
                <div class="yen">
                    (*) Giữ hóa đơn chứ công ty để được đổi sản phẩm trong 48h tiếp theo
                </div>
            </div>
        </div>
    </div>
</body>
