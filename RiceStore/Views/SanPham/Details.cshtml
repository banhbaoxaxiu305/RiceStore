            display: flex;
        }

            #nav li {
                padding: 0 15px;
            }

                #nav li a {
                    text-decoration: none;
                    font-size: 23px;
                    color: white;
                    transition: 0.3s ease;
                }

                    #nav li a:hover {
                        color: rgb(0, 0, 0, 0.87);
                        font-weight: 200;
                        border-bottom: 2px solid #000;
                    }

        #nav-img {
            height: 50px;
            margin: 0;
            flex-wrap: nowrap;
        }

        #nav1 {
            list-style-type: none;
        }

        #content {
