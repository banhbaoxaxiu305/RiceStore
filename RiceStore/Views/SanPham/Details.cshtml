        }

        .fm-size-img {
            width: 200px;
            height: 250px;
            border-bottom-left-radius: 15px;
            border-bottom-right-radius: 15px;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }

        .box-des {
            padding: 15px;
            text-align: center;
            height: 15px;
        }

            .box-des p {
                font-size: 20px;
                margin: 0;
            }

        .btn-Cart {
            display: flex;
            gap: 20px;
        }

        .congtru button {
            border: 1px solid #00E833
        }

            .congtru button:hover {
                opacity: 0.5;
                transition: 0.3s;
            }

        .congtru input {
            border: 1px solid #00E833;
            text-align: center;
            width: 50px;
        }

        .add button {
            border: 1px solid #00E833;
            font-size: 20px;
            height: 40px;
        }

            .add button:hover {
                opacity: 0.5;
                transition: 0.3s;
            }

        #All {
            padding-left: 45%;
        }

        .box-das:hover {
            opacity: 0.5;
        }

        .total-top {
            display: flex;
            justify-content: space-evenly;
            padding-top: 5%;
            padding-left: 50px;
        }

        .ltn {
            font-size: larger;
            text-align: start;
            text-align: start;
        }

        .btk {
            width: 400px;
            padding-left: 0px;
            font-size: 20px;
            text-align: start;
            color: gray;
            list-style-type: none;
        }

        .bvk {
            font-family: 'Roboto', sans-serif;
            font-size: 20px;
            text-align: start;
            margin: 0px;
            margin-bottom: 10px;
        }

        .khanh {
            color: red;
            margin: 0px;
            text-align: start;
            font-family: 'Roboto', sans-serif;
            border-top: 1px solid #6C6A6A;
        }

        .an {
            display: flex;
            font-size: 15px;
            padding-bottom: 15px;
            padding-top: 15px;
            font-size: large;
            font-family: 'Roboto', sans-serif;
            gap: 5px;
        }

        .yen {
            width: 60%;
            height: 50px;
            font-size: 15px;
            text-align: start;
            margin: 0px;
            flex-wrap: wrap;
            font-size: large;
            font-family: 'Roboto', sans-serif;
            padding-bottom: 15px;
        }

        .hung {
            width: 395px;
            height: 580px;
            background-color: lightgray;
            border-radius: 30px;
        }

        .khoa {
            width: 370px;
            font-size: 15px;
            text-align: start;
            padding: 10px;
            padding-left: 20px;
            font-family: 'Roboto', sans-serif;
        }

        .le {
            font-family: 'Roboto', sans-serif;
            font-size: larger;
            text-align: center;
            text-align: center;
            padding: 4%;
        }

        #footer {
            width: 100%;
            height: 358px;
            background-color: #2F412A;
            float: left;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            flex-wrap: wrap;
        }

        .Information {
            width: 100%;
            justify-content: space-around;
            display: flex;
        }

        .Info {
            list-style-type: none;
            height: 100px;
            width: auto;
            padding-left: 10px;
        }

        .Info-2 {
            list-style-type: none;
            height: 100px;
            width: auto;
        }

        .box-bottom li {
            color: #D3D0D0;
            list-style-type: none;
        }

        .box-bottom {
            width: 80%;
            height: 50px;
            border-top: 1px solid #000;
            border-color: #D3D0D0;
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
        }

        #bot-tt {
            justify-content: space-between;
            padding: 0;
        }
