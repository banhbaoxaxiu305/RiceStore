@model IEnumerable<RiceStore.Models.Order>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách đơn hàng</h2>

<table class="table">
    <tr>
        <th>
            MÃ ĐƠN HÀNG
        </th>
        <th>
            TÊN KHÁCH HÀNG
        </th>
        <th>
            NGÀY MUA
        </th>
        <th>
            TỔNG TIỀN
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CusName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalValue)
            </td>
            <td>
                @Html.ActionLink("Xem Chi Tiết", "Detail", new { id = item.OrderID })
            </td>
        </tr>
    }

</table>
